<table style="table-layout:fixed; margin-left: auto; margin-right: auto">
    <tr>
        <td></td>
        <td><MazeRepeatButton OnClick="@(() => OnMoveTop?.Invoke())" Text="↑"/></td>
        <td></td>
    </tr>
    <tr>
        <td><MazeRepeatButton OnClick="@(() => OnMoveLeft?.Invoke())" Text="←"/></td>
        <td></td>
        <td><MazeRepeatButton OnClick="@(() => OnMoveRight?.Invoke())" Text="→"/></td>
    </tr>
    <tr>
        <td></td>
        <td><MazeRepeatButton OnClick="@(() => OnMoveBottom?.Invoke())" Text="↓"/></td>
        <td></td>
    </tr>
</table>

@functions {
    [Parameter]
    public Action OnMoveLeft { get; set; }

    [Parameter]
    public Action OnMoveTop { get; set; }

    [Parameter]
    public Action OnMoveBottom { get; set; }

    [Parameter]
    public Action OnMoveRight { get; set; }
}